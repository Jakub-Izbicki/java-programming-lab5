<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane alignment="CENTER" hgap="10.0" prefHeight="287.0" prefWidth="297.0" vgap="10.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%welcomeText"
                      GridPane.halignment="CENTER" GridPane.columnSpan="4">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%matrixAdimensions" GridPane.rowIndex="1"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%matrixBdimensions" GridPane.rowIndex="2"/>

                <TextField fx:id="matrixAdimensionsX" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="2" text="%matrixDimensionsSeparator"
                      GridPane.rowIndex="1"/>
                <TextField fx:id="matrixAdimensionsY" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <TextField fx:id="matrixBdimensionsX" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="2" text="%matrixDimensionsSeparator"
                      GridPane.rowIndex="2"/>
                <TextField fx:id="matrixBdimensionsY" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                <Button fx:id="signInButton" mnemonicParsing="false" text="%matrixDimensionsReady"
                        GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER"
                        GridPane.rowIndex="4"/>

                <Text fx:id="matrixDimensionsInfo" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnSpan="2"
                      GridPane.rowIndex="6"/>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </padding>
        </GridPane>
    </children>
</HBox>
